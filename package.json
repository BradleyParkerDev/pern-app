{
	"name": "pern-app",
	"version": "1.0.0",
	"type": "module",
	"main": "app.js",
	"scripts": {
		"// ───── CLIENT (Vite + React) ─────": "",
		"clean:client": "rimraf app/client/dist docs",
		"build:client": "npm run  clean:client && vite build --config vite.config.ts",
		"dev:client": "vite --config vite.config.ts",
		"// ───── SERVER (Express + TypeScript) ─────": "",
		"clean:server": "rimraf app/server/dist logs docs",
		"build:server": "npm run  clean:server && tsc -p ./app/tsconfig.json && tsc-alias -p ./app/tsconfig.json",
		"start:server": "node app/server/dist/server/src/bin/www.js",
		"dev:server": "npm run  build:server && concurrently --raw --kill-others-on-fail --handle-input --restart-tries 1 --names \"TSC,NODEMON\" -c \"blue,green\" \"tsc -w -p ./app/tsconfig.json\" \"NODE_ENV=development nodemon --watch app/server/dist --ext js,json --delay 400ms --exec 'npx tsc-alias -p ./app/tsconfig.json && node app/server/dist/server/src/bin/www.js'\"",
		"// ───── FULLSTACK ─────": "",
		"clean": "npm run  clean:client && npm run  clean:server",
		"build": "npm run  build:client && npm run  build:server",
		"prestart": "npm run  build",
		"start": "cross-env APP_ENV=production npm run  start:server",
		"dev": "npm run  clean:client && concurrently --raw \"npm run  dev:server\" \"npm run  dev:client\"",
		"// ───── DATABASE ─────": "",
		"db:generate": "npm run build && drizzle-kit generate",
		"db:migrate": "npx tsx ./app/server/src/database/migrate.ts",
		"db:seed": "npx tsx ./app/server/src/database/seed.ts",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"// ───── TOOLING ─────": "",
		"lint": "eslint \"./**/*.{ts,tsx}\"",
		"lint:fix": "eslint \"./**/*.{ts,tsx}\" --fix",
		"format": "prettier . --write",
		"test": "vitest run",
		"test:watch": "vitest",
		"docs": "npm run  build && typedoc"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "",
